<xml>
    <label size="4" text="Welcome to Genesis" />
    <pad>
    <formbox hidecancel="True" id="frmChangeRootPassword">
        <label size="3" text="Please change the password for the root account. This password has to be changed, wether you plan on using the root account or not." />
        <spacer height="20" />
        <formline text="Password:">
            <textinput name="root_password" password="True" />
        </formline>
        <formline text="Password again:">
            <textinput name="root_password_again" password="True" />
        </formline>
    </formbox>
    </pad>
</xml>
