<xml>
    <label size="5" text="Choose plugins to be downloaded" />
    <label size="1" text="Please note that an internet connection is required to install plugins." />
    <pad>
    <simpleform id="frmPlugins">
        <dt id="list" width="100%">
            <dtr header="True">
                <dth />
                <dth />
                <dth>
                    <label text="Name" />
                </dth>
                <dth>
                    <label text="Description" />
                </dth>
                <dth>
                    <label text="Version" />
                </dth>
                <dth>
                    <label text="Author" />
                </dth>
                <dth />
            </dtr>
        </dt>

        <tooltip text="Download and installation may take a few minutes">
            <button form="frmPlugins" onclick="form" action="OK" text="Download and install" />
        </tooltip>
        <br/>
        <br/>
    </simpleform>
    </pad>
</xml>
