<xml>
    <toolbar>
        <button id="adduser" text="Add user" iconfont="gen-user-plus" />
        <button id="addgrp" text="Add group" iconfont="gen-plus-circle" />
    </toolbar>

    <pad>
    <tabcontrol id="tabs" active="0">
        <tabheader pid="tabs" text="Users" id="0"/>
        <tabheader pid="tabs" text="Groups" id="1"/>

            <tabbody pid="tabs" id="0">
                <dt id="userlist" width="100%">
                    <dtr header="True">
                        <dth width="1" />
                        <dth>
                            <label text="Login" />
                        </dth>
                        <dth>
                            <label text="UID" />
                        </dth>
                        <dth>
                            <label text="Home" />
                        </dth>
                        <dth>
                            <label text="Shell" />
                        </dth>
                        <dth width="1" />
                    </dtr>
                </dt>
            </tabbody>

            <tabbody pid="tabs" id="1">
                <dt id="grouplist">
                    <dtr header="True" width="100%">
                        <dth width="1" />
                        <dth>
                            <label text="Name" />
                        </dth>
                        <dth>
                            <label text="GID" />
                        </dth>
                        <dth>
                            <label text="Users" />
                        </dth>
                        <dth width="1" />
                    </dtr>
                </dt>
            </tabbody>
    </tabcontrol>

    <dialogbox id="dlgEditUser" hidecancel="True">
        <formline text="Login">
            <editable id="elogin" />
        </formline>
        <formline text="Password">
            <editpassword id="epassword" value="Click to change password" />
        </formline>
        <formline text="UID">
            <editable id="euid" />
        </formline>
        <formline text="GID">
            <editable id="egid" />
        </formline>
        <formline text="Home">
            <editable id="ehome" />
        </formline>
        <formline text="Shell">
            <editable id="eshell" />
        </formline>
        <formline text="Groups">
            <label id="lblugroups" />
            <br/>
            <button text="Add" id="chaddtogroup" />
            <button text="Remove" id="chdelfromgroup" />
        </formline>
        <formline>
            <button id="deluser" design="danger" text="Delete user" />
        </formline>
    </dialogbox>

    <dialogbox id="dlgEditGroup">
        <formline text="Name">
            <editable id="ename" />
        </formline>
        <formline text="GID">
            <editable id="eggid" />
        </formline>
        <formline text="Name">
            <editable id="ename" />
        </formline>
        <formline>
            <button id="delgroup" design="danger" text="Delete group" />
        </formline>
        <formline text="Users">
            <label id="lblgusers" />
        </formline>
    </dialogbox>

    <inputbox id="dlgEdit" />
    </pad>
</xml>
