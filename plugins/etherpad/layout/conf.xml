<xml>
    <label text="These options are MANDATORY! Especially the password." />
	<formline text="Admin Username">
	    <textinput name="ether_admin" id="ether_admin" value="Admin" />
	</formline>
	<formline text="Admin Password">
	    <textinput name="ether_pass" id="ether_pass" password="True" />
	</formline>
    <formline text="Plugins" help="">
        <label text="(You can tick plugins to be preinstalled. Plugins can also be installed later through the etherpad interface.)" />
        <formline checkbox="true" help="Gives the ability to list and administrate all pads on admin page.">
            <checkbox name="ep_plugin/ep_adminpads" text="adminpads" checked="True" />
        </formline>
        <!--<checkbox name="ep_plugin/ep_align" text="align - Add text alignment buttons." checked="False" />-->
