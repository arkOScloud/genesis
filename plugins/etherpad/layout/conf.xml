        <formline checkbox="true" help="Apply colors to fonts.">
            <checkbox name="ep_plugin/ep_font_color" text="font color" checked="False" />
        </formline>
        <formline checkbox="true" help="Adds a ruler to Etherpad lite.">
            <checkbox name="ep_plugin/ep_ruler" text="ruler" checked="False" />
        </formline>
        <formline checkbox="true" help="Change the font family of some text.">
            <checkbox name="ep_plugin/ep_font_family" text="font family" checked="False" />
        </formline>
        <formline checkbox="true" help="Change the font size.">
            <checkbox name="ep_plugin/ep_font_size" text="font size" checked="False" />
        </formline>
