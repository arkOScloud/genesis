            <checkbox name="ep_plugin/ep_page_view" text="page view" checked="False" />
        </formline>
        <!--<checkbox name="ep_plugin/ep_set_title_on_pad" text="set title on pad - Set the title on a pad in Etherpad, also includes real time updates to the UI." checked="False" />-->
